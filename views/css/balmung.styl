
#browse
  table
    font-size 12px
    th.icon, th.status
      width 32px
    th.size, th.bounds, td.size, td.bounds
      text-align center
    td.size
      span
        display inline-block
      .bytes
        width 38px
        text-align right
      .compress
        width 40px
        margin 0 0 0 6px
        font-size 10px
      .control
        margin 0 0 0 4px
        .glyphicon
          margin 0 0 0 4px

.breadcrumb
  li
    a
      cursor: pointer

.table-hover
  td
    cursor: pointer

.balmung-preview-header
  h5
    text-align center
  .background-changer
    text-align center
    .btn-group
      padding 0 2px
.balmung-preview-body
  .compress, .center
    text-align center
  .images
    padding 10px
    margin 0 -20px
    background-image url(/img/mesh.png)
    background-repeat repeat
    text-align center
    cursor pointer
    img:first-child
      margin-right 10px
  .zoomer
    position absolute
    margin 0 -20px
    padding 10px
    text-align center
  .left, .work
    text-align right
  .bytes
    .value
      font-weight bold
      font-size 18px
    .unit
      font-size 14px
.zoomed
  position absolute
  z-index 10000
  top 0px
  left 0px
